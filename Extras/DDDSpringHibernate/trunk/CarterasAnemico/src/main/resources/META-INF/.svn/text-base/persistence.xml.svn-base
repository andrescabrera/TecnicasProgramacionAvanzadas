<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">

	<persistence-unit name="carterasPU" transaction-type="RESOURCE_LOCAL">
            <class>es.ddd.carteras.modelo.Cartera</class>
            <class>es.ddd.carteras.modelo.Accion</class>
            <class>es.ddd.carteras.modelo.EntidadFinanciera</class>
            <class>es.ddd.carteras.modelo.Inversion</class>

            <properties>
                <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
                <property name="hibernate.show_sql" value="true" />
            </properties>
	</persistence-unit>

</persistence>
